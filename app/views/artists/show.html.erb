<h1>Artist</h1>

Name: <%= link_to @artist.name, artist_path(@artist) %><br>
<ul>
  <% if @artist.song_count > 0 %>
  <%= @artist.songs.count %><%= pluralize(@artist.songs.count, 'Song') %>
  <li>
    <% @artist.songs.each do |i| %>
      <%= link_to i.name, song_path(i) %>
    <% end %>
  </li>
  <% end %>
</ul>
<%= link_to @song.artist_name, artist_path(@song.artist)%>
